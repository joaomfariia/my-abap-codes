REPORT znt05_loop_continue_exit.

PARAMETERS: p_x TYPE i.

DATA: n1     TYPE i VALUE 1,
      result TYPE i.

WRITE:/ 'While loop...'.

************************************************************************
*** Loop Code #1                                                     ***
************************************************************************

WHILE n1 <= 10.

  result = p_x * n1.
  WRITE:/ p_x,'*',n1,'=',result.
  n1 = n1 + 1.

ENDWHILE.
ULINE.

************************************************************************
*** Loop Code #2                                                     ***
************************************************************************

n1 = 1.
WRITE:/ 'While loop (Second Syntax)'.

WHILE n1 <= 10.

  IF n1 NE 4.
    result = p_x * n1.
    WRITE:/ p_x,'*',result,'=',result.
  ENDIF.
  n1 = n1 + 1.

ENDWHILE.
ULINE.

